@font-face
	font-family 'Circe-Light'
	src local('Circe Light'), local('Circe-Light'),
		url('../fonts/hinted-subset-Circe-Light.woff2') format('woff2'),
		url('../fonts/hinted-subset-Circe-Light.woff') format('woff')
	font-weight normal
	font-style normal

@font-face
	font-family 'Circe-Regular'
	src local('Circe'), local('Circe-Regular'),
		url('../fonts/hinted-subset-Circe-Regular.woff2') format('woff2'),
		url('../fonts/hinted-subset-Circe-Regular.woff') format('woff')
