		url('../fonts/hinted-subset-PTSerif-Bold.woff') format('woff')
	font-weight normal
	font-style normal


$pB  = 'PTSerif-Bold', Arial, Helvetica Neue, Helvetica, sans-serif

$cL  = 'Circe-Light', Arial, Helvetica Neue, Helvetica, sans-serif
$cR  = 'Circe-Regular', Arial, Helvetica Neue, Helvetica, sans-serif
