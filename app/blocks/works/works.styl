.works
	position relative
	display block
	background url('../images/general/works-bg.jpg') 50% 0 no-repeat
	background-size cover
	&__foliage
		position absolute
		top -154px
		left -90px
		+r($dS)
			display none
	&__in
		@extends .in
		padding-top $sec-pad-vert
		padding-bottom $sec-pad-vert
		+r($dS)
			padding-top ($sec-pad-vert/2)
			padding-bottom ($sec-pad-vert/2)
	&__title
		margin-bottom $t-m-bot
		text-align center
		color #5d3a31
		+r($tM)
			margin-bottom (57px/2)
	&__list
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items flex-start
	&__item
		margin-bottom 20px
		width 570px
		width ratio-percentage(570, 1170)
		+r($m)
			width auto
	&__link
		margin-bottom 18px
		display block
		&:hover
			.works__image
				&:after
					position absolute
					top 0
					right 0
					bottom 0
					left 0
					content ''
					background rgba(51,51,51, .6)
					tr(all .3s ease)
					border-radius 15px
			.works__button-w
				visibility visible
				opacity 1
				tr(all .3s ease)

	&__image
		position relative
		border-radius 15px
		background-color #ffffff
		box-shadow 0px 1px 51px 0 rgba(3, 6, 6, 0.08)
		img
			display block
			max-width 100%
			height auto
			border-radius 15px
	&__button-w
		position absolute
		z-index 1
		top 50%
		left 50%
		visibility hidden
		opacity 0
		transform translate(-50%, -50%)
		tr(all .3s ease)

	&__button
		position relative
		margin auto
		margin-bottom 18px
		retinaSprite($zoom_group)
		border-radius 50%

	&__button-text
		color #FFF
		font-family $pR
		font-size 30px
		+r($tM)
			font-size (30px/1.4)
		+r($t)
			font-size (30px/1.8)

	&__gallery
		display none

	&__item-title,
	&__item-date
		padding-left 12px
	&__item-title
		font-size 28px
		+r($tM)
			font-size (28px/1.4)



