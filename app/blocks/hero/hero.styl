.hero
	text-align center
	&__item
		position relative
		height 800px
		+r($dS)
			height (800px/1.4)
		+r($m)
			height 400px
		&:after
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			content ''
			background rgba(0,0,0, .3)

	&__in
		position relative
		z-index 1
		@extends .in
		padding-top 164px
		color #FFF
		height 100%
		+r($dS)
			padding-top (164px/1.4)
		+r($m)
			padding-top (164px/2)
	&__title
		margin-bottom 40px
		padding-left 100px
		padding-right 100px
		font-size 120px
		font-family $pB
		line-height 1
		letter-spacing tracking(25)
		+r($dS)
			margin-bottom 20px
			font-size (120px/2)
			padding-left 50px
			padding-right 50px
		+r($m)
			padding-left 0
			padding-right 0
			font-size 42px
		+r($mM)
			font-size 30px

	&__text
		margin-bottom 56px
		font-size 60px
		line-height 1
		+r($dS)
			font-size 30px
		+r($m)
			margin-bottom (56px/2)
			font-size 24px
		+r($mM)
			font-size 20px
	&__button-w
		text-align center
	&__button
		color #49363b
		font-family $pB
		font-size 44px
		line-height 1
		+r($m)
			font-size (45px/2)
		&:hover
			background-image linear-gradient(to top, #ffba01, #ffd615)
			box-shadow 0px 5px 10px 0 rgba(242, 173, 25, 0.59), inset 0px -3px 0 0 #f1a709

	.slick-arrow
		background transparent
		z-index 1
		+r($m)
			display none !important
		&:before
			display none
	.slick-prev
		left 100px
		retinaSprite($arrow_left_group)
		transform translateY(-50%) rotate(0)
		+r($dS)
			left 10px
		+r($m)
			display none
		&:hover
			retinaSprite($arrow_right_active_group)
			transform translateY(-50%) rotate(180deg)
		&:focus
			retinaSprite($arrow_left_group)
			transform translateY(-50%) rotate(0)
	.slick-next
		right 100px
		retinaSprite($arrow_left_group)
		transform translateY(-50%) rotate(180deg)
		+r($dS)
			right 10px
		+r($m)
			display none
		&:hover
			retinaSprite($arrow_right_active_group)
			transform translateY(-50%) rotate(0deg)
		&:focus
			retinaSprite($arrow_left_group)
			transform translateY(-50%) rotate(180deg)
	.slick-dots
		bottom 43px
		+r($m)
			bottom 10px
		li
			button
				position relative
				width 16px
				height 16px
				&:before
					position absolute
					top 50%
					left 50%
					width 8px
					height 8px
					opacity 1
					background #fff
					border-radius 50%
					transform translate(-50%, -50%)

		.slick-active
			button
				&:before
					width 16px
					height 16px
					background-color #fdc516

section.hero
	.hero__slider
		margin-bottom 0
