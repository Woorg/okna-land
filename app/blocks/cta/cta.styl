.cta
	display block
	// background url('../images/general/cta-bg.jpg') 50% 0 no-repeat
	background-position 50% 0
	background-repeat no-repeat
	background-size cover
	color #fff
	// &_second
	// 	background url('../images/general/cta-2-bg.jpg') 50% 0 no-repeat
	// 	background-size cover
	&__in
		@extends .in
		padding-top $sec-pad-vert
		padding-bottom $sec-pad-vert
		text-align center
		+r($tM)
			padding-top (60px/2)
			padding-bottom (55px/2)

	&__title
		@extends .title
		margin-bottom 10px
		padding-bottom 0
		font-size 42px
		font-family $pB
		text-align center
		letter-spacing 0.2px
		color #fff
		+r($tM)
			font-size (50px/2)
	&__text
		margin-bottom 24px
		font-size 38px
	&__button
		padding-left 80px
		padding-right 80px
		color #49363b
		font-family $cB
		text-transform uppercase
		tr(all .3s ease)
		&:hover
			tr(all .3s ease)


